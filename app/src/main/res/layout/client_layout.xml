<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/colorOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_color_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/colorTwo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorMixBar" />

    <Button
        android:id="@+id/colorTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_color_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/colorOne"
        app:layout_constraintTop_toBottomOf="@+id/colorMixBar" />

    <TextView
        android:id="@+id/colorView"
        android:layout_width="348dp"
        android:layout_height="380dp"
        app:layout_constraintBottom_toTopOf="@+id/colorMixBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/colorMixBar"
        android:layout_width="348dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toTopOf="@+id/colorOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorView" />
</android.support.constraint.ConstraintLayout>